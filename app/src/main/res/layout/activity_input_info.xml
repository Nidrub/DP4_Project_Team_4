<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/grey"
    android:padding="16dp"
    tools:context=".Input_Info_Activity">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="12dp"
            android:text="Financial Information"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.05"
            android:shadowColor="@color/grey"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/Income"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/baseline_attach_money_24"
            android:drawablePadding="12dp"
            android:hint="Monthly Income"
            android:padding="12dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:shadowColor="@color/grey"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />


        <TextView
            android:id="@+id/Expense_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:text="Monthly Expenses"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.05"
            android:shadowColor="@color/grey"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/food"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/baseline_control_point_24"
            android:drawablePadding="12dp"
            android:hint="Food"
            android:padding="12dp"
            android:inputType="number"
            android:textColor="@color/black"

            android:textSize="16sp"
            android:fontFamily="sans-serif" />


        <EditText
            android:id="@+id/mortgage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/baseline_control_point_24"
            android:drawablePadding="12dp"
            android:hint="Mortgage / Rent"
            android:padding="12dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />


        <EditText
            android:id="@+id/waterBill"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/baseline_control_point_24"
            android:drawablePadding="12dp"
            android:hint="Water Bill"
            android:padding="12dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />


        <EditText
            android:id="@+id/electricBill"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/baseline_control_point_24"
            android:drawablePadding="12dp"
            android:hint="Electric Bill"
            android:padding="12dp"
            android:inputType="number"
            android:textColor="@color/black"

            android:textSize="16sp"
            android:fontFamily="sans-serif" />


        <EditText
            android:id="@+id/gasBill"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/baseline_control_point_24"
            android:drawablePadding="12dp"
            android:hint="Gas Bill"
            android:padding="12dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />

        <EditText
            android:id="@+id/internetBill"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/baseline_control_point_24"
            android:drawablePadding="12dp"
            android:hint="Internet Bill"
            android:padding="12dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />


        <Button
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/sky_blue"
            android:text="Next"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white"
            app:cornerRadius="30dp"
            android:elevation="4dp"
            android:paddingVertical="10dp"
            android:layout_gravity="center" />

</LinearLayout>