<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="335dp"
    android:background="#525252"
    android:id="@+id/upgradedArmor">

    <Button
        android:id="@+id/swordclose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF0000"
        android:text="X"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/popup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#454749"
        android:text="+30 Attack"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintTop_toBottomOf="@+id/swordclose"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/sword"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/sword"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/popup_text"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/equipbutton"
        android:layout_width="152dp"
        android:layout_height="58dp"
        android:layout_marginTop="-100dp"
        android:backgroundTint="@color/shadow_grey"
        android:text="Equip"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/sword"
        app:layout_constraintTop_toBottomOf="@+id/sword" />
</androidx.constraintlayout.widget.ConstraintLayout>
